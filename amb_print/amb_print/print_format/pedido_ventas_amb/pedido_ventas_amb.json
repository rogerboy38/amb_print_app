{
  "doctype": "Print Format",
  "name": "PEDIDO_VENTAS_AMB",
  "doc_type": "Sales Order",
  "module": "AMB Print",
  "standard": "No",
  "custom_format": 1,
  "print_format_type": "Jinja",
  "raw_printing": 0,
  "html": "<!-- PEDIDO_VENTAS_AMB Print Format -->\n\n<style>\n@page {\n    size: letter;\n    margin: 15mm 10mm 20mm 10mm;\n}\n\n.print-format {\n    font-family: Arial, sans-serif;\n    font-size: 10pt;\n}\n\n.header-section {\n    display: flex;\n    justify-content: space-between;\n    margin-bottom: 20px;\n}\n\n.logo-container {\n    width: 150px;\n}\n\n.logo-container img {\n    max-width: 100%;\n    height: auto;\n}\n\n.company-info {\n    text-align: right;\n}\n\n.company-name {\n    font-size: 14pt;\n    font-weight: bold;\n    color: #2c3e50;\n}\n\n.header-line {\n    border-top: 2px solid #3498db;\n    margin: 10px 0;\n}\n\n.main-title {\n    font-size: 16pt;\n    font-weight: bold;\n    text-align: center;\n    color: #2c3e50;\n    margin: 15px 0;\n}\n\n.meta-row {\n    display: flex;\n    justify-content: space-between;\n    margin-bottom: 10px;\n}\n\n.meta-box {\n    flex: 1;\n    margin: 0 5px;\n}\n\n.meta-label {\n    font-weight: bold;\n    color: #7f8c8d;\n    font-size: 8pt;\n}\n\n.meta-value {\n    font-size: 10pt;\n}\n\n.section-header {\n    background-color: #3498db;\n    color: white;\n    padding: 5px 10px;\n    font-weight: bold;\n    margin-top: 15px;\n}\n\n.items-table {\n    width: 100%;\n    border-collapse: collapse;\n    margin-top: 10px;\n}\n\n.items-table th {\n    background-color: #ecf0f1;\n    border: 1px solid #bdc3c7;\n    padding: 8px;\n    text-align: left;\n    font-size: 9pt;\n}\n\n.items-table td {\n    border: 1px solid #bdc3c7;\n    padding: 6px;\n    font-size: 9pt;\n}\n\n.totals-section {\n    margin-top: 20px;\n    text-align: right;\n}\n\n.footer-section {\n    margin-top: 30px;\n    border-top: 1px solid #bdc3c7;\n    padding-top: 10px;\n}\n</style>\n\n<div class=\"print-format\">\n    <!-- Header Section -->\n    <div class=\"header-section\">\n        <div class=\"logo-container\">\n            <!-- Logo handled by Letter Head -->\n        </div>\n        <div class=\"company-info\">\n            <div class=\"company-name\">{{ doc.company }}</div>\n        </div>\n    </div>\n\n    <div class=\"header-line\"></div>\n\n    <div class=\"main-title\">PEDIDO DE VENTAS</div>\n\n    <!-- Document Meta Information -->\n    <div class=\"meta-row\">\n        <div class=\"meta-box\">\n            <div class=\"meta-label\">Numero Pedido</div>\n            <div class=\"meta-value\">{{ doc.name }}</div>\n        </div>\n        <div class=\"meta-box\">\n            <div class=\"meta-label\">FECHA</div>\n            <div class=\"meta-value\">{{ doc.transaction_date }}</div>\n        </div>\n        <div class=\"meta-box\">\n            <div class=\"meta-label\">Cliente</div>\n            <div class=\"meta-value\">{{ doc.customer_name }}</div>\n        </div>\n    </div>\n\n    <!-- Items Section -->\n    <div class=\"section-header\">Articulos</div>\n    <table class=\"items-table\">\n        <thead>\n            <tr>\n                <th style=\"width: 5%\">#</th>\n                <th style=\"width: 15%\">Codigo</th>\n                <th style=\"width: 40%\">Descripcion</th>\n                <th style=\"width: 10%\">Cantidad</th>\n                <th style=\"width: 10%\">UOM</th>\n                <th style=\"width: 10%\">Precio</th>\n                <th style=\"width: 10%\">Total</th>\n            </tr>\n        </thead>\n        <tbody>\n            {% for item in doc.items %}\n            <tr>\n                <td>{{ loop.index }}</td>\n                <td>{{ item.item_code }}</td>\n                <td>{{ item.item_name }}</td>\n                <td style=\"text-align: right\">{{ item.qty }}</td>\n                <td>{{ item.uom }}</td>\n                <td style=\"text-align: right\">{{ item.rate }}</td>\n                <td style=\"text-align: right\">{{ item.amount }}</td>\n            </tr>\n            {% endfor %}\n        </tbody>\n    </table>\n\n    <!-- Totals Section -->\n    <div class=\"totals-section\">\n        <table style=\"margin-left: auto\">\n            <tr>\n                <td><strong>Subtotal:</strong></td>\n                <td style=\"text-align: right\">{{ doc.total }}</td>\n            </tr>\n            {% if doc.discount_amount %}\n            <tr>\n                <td><strong>Descuento:</strong></td>\n                <td style=\"text-align: right\">{{ doc.discount_amount }}</td>\n            </tr>\n            {% endif %}\n            {% if doc.total_taxes_and_charges %}\n            <tr>\n                <td><strong>Impuestos:</strong></td>\n                <td style=\"text-align: right\">{{ doc.total_taxes_and_charges }}</td>\n            </tr>\n            {% endif %}\n            <tr>\n                <td><strong>TOTAL:</strong></td>\n                <td style=\"text-align: right\"><strong>{{ doc.grand_total }}</strong></td>\n            </tr>\n        </table>\n    </div>\n\n    <!-- Footer Section -->\n    <div class=\"footer-section\">\n        <p><strong>Terminos y Condiciones:</strong></p>\n        <p>{{ doc.terms or '' }}</p>\n    </div>\n</div>",
  "css": "",
  "disabled": 0
}
